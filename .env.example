# ==========
# Projeto
# ==========
NODE_ENV=development
DOCKER_COMPOSE_PROJECT_NAME=mini-task-scheduler

# ==========
# Ports locais (host)
# ==========
BACKEND_PORT=4000
FRONTEND_PORT=5173
FRONTEND_ALT_PORT=5174
POSTGRES_PORT=5432

# ==========
# Frontend (Vite)
# O frontend fala com a API via esta URL (do ponto de vista do browser)
# ==========
VITE_API_URL=http://localhost:${BACKEND_PORT}/api

# ==========
# CORS (Backend NestJS)
# O backend permite pedidos vindos do frontend nestas origens
# ==========
FRONTEND_URL=http://localhost:${FRONTEND_PORT}

# ==========
# Auth / JWT
# ==========
JWT_SECRET=change_me

# ==========
# Base de Dados (Postgres)
# - Em Docker, o host da BD Ã© "db"
# - Em local (fora de Docker), usa localhost
# ==========
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mts
POSTGRES_HOST=db

# URL usada pelo backend DENTRO do Docker (host "db")
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

