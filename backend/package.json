{
  "name": "mts-backend",
  "version": "0.2.0",
  "description": "Mini Task Scheduler - Backend",
  "private": true,
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18 <=22"
  },
  "scripts": {
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings=0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:list": "jest --listTests",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema=prisma/schema.prisma",
    "db:reset": "prisma migrate reset --force --skip-seed --schema=prisma/schema.prisma",
    "seed": "prisma db seed",
    "postinstall": "prisma generate --schema=prisma/schema.prisma",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/bullmq": "10.2.3",
    "@nestjs/common": "10.4.20",
    "@nestjs/config": "3.2.2",
    "@nestjs/core": "10.4.20",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.20",
    "@nestjs/platform-socket.io": "10.3.10",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/websockets": "10.3.10",
    "@prisma/client": "5.22.0",
    "argon2": "0.44.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "2.4.3",
    "bullmq": "5.61.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "helmet": "^7.2.0",
    "ioredis": "5.8.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "socket.io": "4.7.5",
    "swagger-ui-express": "^5.0.1",
    "zod": "3.25.6"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.5",
    "@nestjs/schematics": "10.1.2",
    "@nestjs/testing": "^10.4.20",
    "@types/bcryptjs": "2.4.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.23",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "eslint": "8.57.0",
    "jest": "^29.7.0",
    "prettier": "3.2.5",
    "prisma": "5.22.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
